{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
